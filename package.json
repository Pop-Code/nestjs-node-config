{
    "name": "nestjs-node-config",
    "version": "0.0.7",
    "description": "The nestjs node-config package",
    "author": "Alex Hermann <alex.hermann@pop-code.com>",
    "repository": "https://github.com/Pop-Code/nestjs-node-config",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "rm -Rf ./dist && tsc",
        "doc": "rm -Rf ./docs && typedoc ./src && touch ./docs/.nojekyll",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest",
        "lint": "eslint ./src",
        "format": "prettier \"**/*.ts\" --ignore-path ./.prettierignore --write && git status"
    },
    "dependencies": {
        "config": "3.3.7"
    },
    "peerDependencies": {
        "@nestjs/common": "^8"
    },
    "devDependencies": {
        "@nestjs/common": "^8.4.4",
        "@nestjs/core": "^8.4.4",
        "@nestjs/platform-express": "^8.4.4",
        "@nestjs/testing": "^8.4.4",
        "@types/config": "^0.0.41",
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.27",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "eslint": "^8.14.0",
        "eslint-config-prettier": "^8.5.0",
        "jest": "^27.5.1",
        "prettier": "^2.6.2",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.5.5",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^4.0.0",
        "typedoc": "^0.22.15",
        "typescript": "^4.6.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "src/**/*.{js,jsx,ts}",
            "!index.ts",
            "!**/test/**"
        ],
        "coverageDirectory": "../coverage"
    },
    "engines": {
        "node": ">=0.10"
    },
    "packageManager": "yarn@3.2.0"
}
